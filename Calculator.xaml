<Window x:Class="WpfDemo.Calculator"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfDemo"
        mc:Ignorable="d"
        Title="Calculator" Height="450" Width="800">
    <Grid>
        <Button Content="1" HorizontalAlignment="Left" Margin="137,117,0,0" VerticalAlignment="Top" Width="75" Click="Button_1"/>
        <Button Content="-" HorizontalAlignment="Left" Margin="248,177,0,0" VerticalAlignment="Top" Width="75" Click="Button_Minus"/>
        <Button Content="+" HorizontalAlignment="Left" Margin="137,177,0,0" VerticalAlignment="Top" Width="75" Click="Button_Plus"/>
        <Button Content="=" HorizontalAlignment="Left" Margin="377,177,0,0" VerticalAlignment="Top" Width="75" Click="Button_Equal"/>
        <Button Content="2" HorizontalAlignment="Left" Margin="248,117,0,0" VerticalAlignment="Top" Width="75" Click="Button_2"/>
        <TextBox HorizontalAlignment="Left" Height="32" Margin="159,55,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="430" Name="tbSettingText"
                 />

    </Grid>
</Window>
